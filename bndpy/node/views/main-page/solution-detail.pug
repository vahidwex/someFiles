extends ../../public/pug-bootstrap/_bootstrap

block body
 
	include ./layout.pug
	+layout( settings,products,solutions)

	.root
		.card(style='direction:rtl;text-align:center;width:600px;margin:20px;')
			.card-header(style='font-size:30px;') 
			.card-body(style='padding:10px;')
				.explanation
					h5.card-title(style='font-size:18px;') #{solution.title}
					p.card-text(style='font-size:13px;') #{solution.description}
				.MainImg
					- var imgUrl = '../images/' + solution.logo;
					img(src=imgUrl, alt=solution.title, style='border-radius:50%;box-shadow:1px 2px 3px rgb(95, 94, 94);', width='170px', height='170px')
				h4(style='padding:10px;background:rgba(0,0,0,.03);') برنامه های مرتبط با راهکار  #{solution.title}
				.productionList
					each product in products
						.productions
							- var productUrl = '/products/' + product.titleEnglish;
							a(href=productUrl)
								- var imgUrl = '../images/' + product.logo;
								img.productImg(src=imgUrl, alt=product.title, width='90px', height='90px')
							h4.productNames #{product.title}